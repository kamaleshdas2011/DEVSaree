@model DataModel.Product
@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Javascripts/shoppingCart.js"></script>
<script src="~/Scripts/Javascripts/ProductDetailsController.js"></script>
<div>
    <shopping-cart></shopping-cart>
</div>
<div class="container row" ng-controller="ProductDetailsController">
        <div class="col-md-4">
            <img src="@Model.PreviewImage.ImageLocation" class="product-details-image"/>
        </div>
        <div class="col-md-4">
            <h4>@Model.product_name</h4>
            <p>@Model.product_description</p>
        </div>
    <div class="col-md-4">
        <button class="btn btn-success" ng-click="cart.addItem(prod.id, prod.product_name, prod.price_per_unit, 1)">
            Add to cart
        </button>
    </div>
</div>


